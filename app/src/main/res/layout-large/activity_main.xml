                    android:src="@drawable/ic_discounts"
                    android:contentDescription="@string/title_activity_discounts"/>

            </TableRow>

            <TableRow android:layout_margin="10sp"
                android:clickable="true"
                android:onClick="wellnessAct">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="0sp"
                    android:onClick="wellnessAct"
                    android:layout_marginLeft="30sp"
                    android:text="@string/title_activity_well"
                    android:textColor="#000000"
                    android:textSize="25sp"/>

                <ImageView
                    android:id="@+id/WellnessButton"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:onClick="wellnessAct"
                    android:padding="0sp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_wellness"
                    android:contentDescription="@string/title_activity_well"/>

            </TableRow>

            <TableRow android:layout_margin="10sp"
                android:clickable="true"
                android:onClick="contactNav">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="0sp"
                    android:layout_marginLeft="30sp"
                    android:onClick="contactNav"
                    android:text="@string/title_activity_contacts"
                    android:textColor="#000000"
                    android:textSize="25sp"/>

                <ImageView
                    android:id="@+id/ContactsButtons"
                    android:layout_width="100sp"
                    android:layout_height="100sp"
                    android:onClick="contactNav"
                    android:padding="0sp"
                    android:scaleType="fitCenter"
                    android:background="#FFFFFF"
                    android:src="@drawable/ic_contacts"
                    android:contentDescription="@string/title_activity_contacts"/>

            </TableRow>

            <TableRow android:layout_margin="10sp"
                android:clickable="true"
                android:onClick="mapNav">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="0sp"
                    android:onClick="mapNav"
                    android:layout_marginLeft="30sp"
                    android:text="@string/title_activity_map"
                    android:textColor="#000000"
                    android:textSize="25sp"/>

                <ImageView
                    android:id="@+id/MapButton"
                    android:layout_width="75sp"
                    android:layout_height="75sp"
                    android:padding="0sp"
                    android:onClick="MapNav"
                    android:scaleType="fitCenter"
                    android:background="#FFFFFF"
                    android:src="@drawable/ic_map"
                    android:contentDescription="@string/title_activity_map"/>

            </TableRow>

        </TableLayout>

    </ScrollView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:paddingTop="0sp"
        android:paddingBottom="0sp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_height="wrap_content"
            android:padding="0sp"
            android:scaleType="fitCenter"
            android:src="@drawable/police_badge"
            android:background="#FFFFFF"
            android:onClick="callPolice"
            android:id="@+id/policeButton"
            android:contentDescription="@string/emergencyDesc"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"/>

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_height="wrap_content"
            android:padding="0sp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_facebook"
            android:onClick="facebookNav"
            android:id="@+id/facebookButton"
            android:contentDescription="@string/facebookDesc"
            android:background="#FFFFFF"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"/>

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_height="wrap_content"
            android:padding="0sp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_twitter"
            android:onClick="twitterNav"
            android:id="@+id/twitterButton"
            android:contentDescription="@string/twitterDesc"
            android:background="#FFFFFF"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"/>

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_height="wrap_content"
            android:padding="0sp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_linkedin"
            android:onClick="linkedinNav"
            android:id="@+id/linkedinButton"
            android:contentDescription="@string/linkedInDesc"
            android:background="#FFFFFF"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"/>

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_height="wrap_content"
            android:padding="0sp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_youtube"
            android:onClick="youtubeNav"
            android:id="@+id/youtubeButton"
            android:contentDescription="@string/youtubeDesc"
            android:background="#FFFFFF"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="15sp"/>

    </LinearLayout>


</LinearLayout>
