<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/jccc_logo_small"/>
        <EditText
            android:id="@+id/edit_message"
            android:hint="@string/app_Name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:onClick="searchJCCC"
            android:scaleType="fitCenter"
            android:src="@mipmap/search_icon"
            />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:background="@mipmap/jccc_color_stripes"
                  android:padding="125dp"
                  android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:id="@+id/mainLogo"
            android:src="@mipmap/jccc_logo1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wellButton"
            android:id="@+id/wellButton"
            android:onClick="wellButtonOnClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_news"
            android:id="@+id/newsButton"
            android:onClick="newsButtonOnClick"/>



    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:paddingTop="0dp"
                  android:paddingBottom="0dp"
                  android:background="@mipmap/jccc_color_stripes"
                  android:orientation="horizontal">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_emergencycircle"
            android:onClick="callPolice"
            android:id="@+id/policeButton"/>
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_facebook"
            android:onClick="facebookNav"
            android:id="@+id/facebookButton" />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_twitter"
            android:onClick="twitterNav"
            android:id="@+id/twitterButton" />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_linkedin"
            android:onClick="linkedinNav"
            android:id="@+id/linkedinButton" />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_youtube"
            android:onClick="youtubeNav"
            android:id="@+id/youtubeButton"/>

    </LinearLayout>


</LinearLayout>
