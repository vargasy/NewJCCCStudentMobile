<!--
This layout adds two fragments to an activity when the device screen
is considered "large" (specified by the LARGE qualifier in the directory name).
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:baselineAligned="false"
                >

    <fragment android:name="com.teamrcy.newjcccstudentmobile.AthleticsTitlesFragment"
              android:id="@+id/athletics_titles_container"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              style="@style/Pane_1"
        />

    <fragment android:name="com.teamrcy.newjcccstudentmobile.AthleticsDetailsFragment"
              android:id="@+id/athletics_detail_fragment"
              android:layout_weight="2"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              style="@style/Pane_2"
        />

</LinearLayout>